#Область СлужебныйПрограммныйИнтерфейс

Процедура ИсполняемыеСценарии() Экспорт
	
	ЮТТесты
		.ДобавитьТестовыйНабор("Коммерция")
			.ДобавитьТест("Товар")
			.ДобавитьТест("Категория")
		.ДобавитьТестовыйНабор("Локализации")
			.ДобавитьТест("ТоварСЛокализацией")
			.ДобавитьТест("КатегорияСЛокализацией")
			.После("СброситьЛокализацию")
	;
	
КонецПроцедуры

Процедура Товар() Экспорт
	
	Товар = ЮТПодражатель_Коммерция.Товар();
	ЮТест.ОжидаетЧто(Товар)
		.ИмеетТип("Строка")
		.Заполнено()
	;
	
	ЮТест.ОжидаетЧто(СтрДлина(Товар))
		.Больше(1)
	;
	
КонецПроцедуры

Процедура Категория() Экспорт
	
	Категория = ЮТПодражатель_Коммерция.Категория();
	ЮТест.ОжидаетЧто(Категория)
		.ИмеетТип("Строка")
		.Заполнено()
	;
	
	ЮТест.ОжидаетЧто(СтрДлина(Категория))
		.Больше(1)
	;
	
КонецПроцедуры

Процедура ТоварСЛокализацией() Экспорт
	
	Подражатель = ЮТест.Данные().Подражатель();
	Подражатель.УстановитьЛокализацию("en");
	
	Товар = ЮТПодражатель_Коммерция.Товар();
	ЮТест.ОжидаетЧто(Товар)
		.ИмеетТип("Строка")
		.Заполнено()
	;
	
КонецПроцедуры

Процедура КатегорияСЛокализацией() Экспорт
	
	Подражатель = ЮТест.Данные().Подражатель();
	Подражатель.УстановитьЛокализацию("en");
	
	Категория = ЮТПодражатель_Коммерция.Категория();
	ЮТест.ОжидаетЧто(Категория)
		.ИмеетТип("Строка")
		.Заполнено()
	;
	
КонецПроцедуры

#КонецОбласти

#Область СлужебныеПроцедурыИФункции

Процедура СброситьЛокализацию()
	
	ЮТест.Данные().Подражатель().УстановитьЛокализацию("");
	
КонецПроцедуры

#КонецОбласти
